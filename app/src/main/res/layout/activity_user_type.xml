<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_title"
            android:layout_width="0dp"
            android:layout_height="@dimen/sw_56dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/sw_1dp"
                android:background="#EBEBEB"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/sw_56dp"
                android:layout_height="@dimen/sw_56dp"
                android:padding="@dimen/sw_15dp"
                android:src="@drawable/icon_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="@dimen/sw_317dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sw_23dp"
                    android:text="Hello! What brings you to Timely?"
                    android:textColor="#4A4A4A"
                    android:textSize="@dimen/sw_29dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_email_title"
                    android:layout_width="@dimen/sw_317dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sw_38dp"
                    android:lineHeight="@dimen/sw_25dp"
                    android:text="Connect with our community of mentors and users from 141+ countuies around the word."
                    android:textColor="#4A4A4A"
                    android:textSize="@dimen/sw_15dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title" />

                <!-- learner -->
                <View
                    android:id="@+id/view_learner"
                    android:layout_width="@dimen/sw_327dp"
                    android:layout_height="@dimen/sw_146dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/sw_38dp"
                    android:background="@drawable/shape_stroke_e2e2e2_8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_email_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/view_learner"
                    app:layout_constraintEnd_toEndOf="@id/view_learner"
                    app:layout_constraintTop_toTopOf="@id/view_learner"
                    android:textColor="#4A4A4A"
                    android:layout_marginTop="@dimen/sw_31dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/sw_19dp"
                    android:text="Be a Learner" />

                <TextView
                    android:layout_width="@dimen/sw_240dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/view_learner"
                    app:layout_constraintEnd_toEndOf="@id/view_learner"
                    app:layout_constraintBottom_toBottomOf="@id/view_learner"
                    android:textColor="#4A4A4A"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/sw_31dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/sw_15dp"
                    android:text="Standing On the Shoulders of Giants to See Further." />

                <!-- learner -->
                <View
                    android:id="@+id/view_sifu"
                    android:layout_width="@dimen/sw_327dp"
                    android:layout_height="@dimen/sw_146dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/sw_38dp"
                    android:background="@drawable/shape_stroke_e2e2e2_8dp"
                    app:layout_constraintTop_toBottomOf="@+id/view_learner" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/view_sifu"
                    app:layout_constraintEnd_toEndOf="@id/view_sifu"
                    app:layout_constraintTop_toTopOf="@id/view_sifu"
                    android:textColor="#4A4A4A"
                    android:layout_marginTop="@dimen/sw_31dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/sw_19dp"
                    android:text="Be a Sensei" />

                <TextView
                    android:layout_width="@dimen/sw_240dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/view_sifu"
                    app:layout_constraintEnd_toEndOf="@id/view_sifu"
                    app:layout_constraintBottom_toBottomOf="@id/view_sifu"
                    android:textColor="#4A4A4A"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/sw_31dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/sw_15dp"
                    android:text="Helping Others Succeed Forges Your Own Attainment." />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>