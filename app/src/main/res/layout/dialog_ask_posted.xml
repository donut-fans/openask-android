<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/sw_330dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_stroke_000000_r16_w4">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/sw_24dp"
            android:layout_height="@dimen/sw_24dp"
            android:layout_marginTop="@dimen/sw_15dp"
            android:layout_marginEnd="@dimen/sw_15dp"
            android:src="@drawable/icon_drawer_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/sw_194dp"
            android:layout_height="@dimen/sw_150dp"
            android:layout_marginTop="@dimen/sw_50dp"
            android:src="@drawable/img_ask_posted"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="@dimen/sw_230dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Awesome, your ask is posted!"
            android:textColor="@color/black"
            android:textSize="@dimen/sw_22dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_icon" />

        <TextView
            android:id="@+id/tv_title_sub"
            android:layout_width="@dimen/sw_230dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Your ask is sent! Youâ€™ll get a refund if this ask is not answered in 7 days. Stay tuned. "
            android:textColor="@color/black"
            android:textSize="@dimen/sw_13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <TextView
            android:id="@+id/tv_title_sub2"
            android:layout_width="@dimen/sw_230dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sw_10dp"
            android:gravity="center"
            android:text="Next, share your ask to enhance visibility and increase the chances of receiving a response from Sensei."
            android:textColor="@color/black"
            android:textSize="@dimen/sw_15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_sub" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="@dimen/sw_298dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/sw_10dp"
            android:src="@drawable/icon_btn_share"
            app:layout_constraintDimensionRatio="933:159"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_sub2" />

        <ImageView
            android:id="@+id/iv_view"
            android:layout_width="@dimen/sw_298dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/sw_10dp"
            android:layout_marginBottom="@dimen/sw_15dp"
            android:src="@drawable/icon_btn_view_ask"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="933:159"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_share" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/sw_20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_view"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>