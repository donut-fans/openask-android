<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/sw_330dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_stroke_000000_r16_w4">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/sw_24dp"
            android:layout_height="@dimen/sw_24dp"
            android:layout_marginTop="@dimen/sw_15dp"
            android:layout_marginEnd="@dimen/sw_15dp"
            android:src="@drawable/icon_drawer_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="@dimen/sw_230dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sw_20dp"
            android:gravity="center"
            android:text="Become a Sensei"
            android:textColor="@color/black"
            android:textSize="@dimen/sw_22dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title_sub"
            android:layout_width="@dimen/sw_230dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sw_10dp"
            android:gravity="center"
            android:text="You're just a few clicks away from becoming a Sensei! "
            android:textColor="@color/black"
            android:textSize="@dimen/sw_13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />
        
        <TextView
            android:id="@+id/tv_step1"
            android:layout_width="@dimen/sw_44dp"
            android:layout_height="@dimen/sw_44dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_sub"
            app:layout_constraintStart_toStartOf="parent"
            android:text="1"
            android:layout_marginTop="@dimen/sw_55dp"
            android:textColor="@color/black"
            android:textSize="@dimen/sw_20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:includeFontPadding="false"
            android:layout_marginStart="@dimen/sw_29dp"
            android:background="@drawable/shape_circle_cafe07"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set your min price"
            android:textColor="@color/black"
            android:textSize="@dimen/sw_16dp"
            app:layout_constraintTop_toTopOf="@id/tv_step1"
            app:layout_constraintBottom_toBottomOf="@id/tv_step1"
            app:layout_constraintStart_toEndOf="@id/tv_step1"
            android:layout_marginStart="@dimen/sw_16dp"
            android:includeFontPadding="false"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_step2"
            android:layout_width="@dimen/sw_44dp"
            android:layout_height="@dimen/sw_44dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_step1"
            app:layout_constraintStart_toStartOf="parent"
            android:text="2"
            android:layout_marginTop="@dimen/sw_25dp"
            android:textColor="@color/black"
            android:textSize="@dimen/sw_20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:includeFontPadding="false"
            android:layout_marginStart="@dimen/sw_29dp"
            android:background="@drawable/shape_circle_cafe07"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post your voice intro\n(Optional)"
            android:textColor="@color/black"
            android:textSize="@dimen/sw_16dp"
            app:layout_constraintTop_toTopOf="@id/tv_step2"
            app:layout_constraintBottom_toBottomOf="@id/tv_step2"
            app:layout_constraintStart_toEndOf="@id/tv_step2"
            android:layout_marginStart="@dimen/sw_16dp"
            android:includeFontPadding="false"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_btn"
            android:layout_width="@dimen/sw_298dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/sw_100dp"
            android:layout_marginBottom="@dimen/sw_20dp"
            android:background="@drawable/icon_btn_bg2"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Ok, letâ€™s go"
            android:textColor="#CAFE07"
            android:textSize="@dimen/sw_17dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="903:162"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_step2" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>