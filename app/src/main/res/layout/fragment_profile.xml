<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="@dimen/sw_56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:textColor="#4A4A4A"
            android:textSize="@dimen/sw_15dp"
            android:text="About me" />

        <View
            android:id="@+id/view_divider"
            android:layout_width="0dp"
            android:layout_height="@dimen/sw_1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_title"
            android:background="#EBEBEB" />

        <ImageView
            android:id="@+id/iv_avator"
            android:layout_width="@dimen/sw_61dp"
            android:layout_height="@dimen/sw_61dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/sw_17dp"
            android:layout_marginTop="@dimen/sw_23dp"
            android:src="#000000"
            app:layout_constraintTop_toBottomOf="@+id/view_divider" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_avator"
            android:text="AMY.CHUANG"
            app:layout_constraintBottom_toTopOf="@id/tv_edit"
            android:textColor="#4A4A4A"
            android:layout_marginStart="@dimen/sw_12dp"
            android:textSize="@dimen/sw_17dp"
            app:layout_constraintStart_toEndOf="@id/iv_avator" />

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#929292"
            app:layout_constraintTop_toBottomOf="@id/tv_nickname"
            android:text="Edit Profile"
            android:textSize="@dimen/sw_13dp"
            app:layout_constraintStart_toStartOf="@id/tv_nickname"
            app:layout_constraintBottom_toBottomOf="@id/iv_avator" />

        <ImageView
            android:layout_width="@dimen/sw_15dp"
            android:layout_height="@dimen/sw_15dp"
            app:layout_constraintTop_toTopOf="@id/iv_avator"
            app:layout_constraintBottom_toBottomOf="@id/iv_avator"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/sw_17dp"
            android:src="@drawable/icon_profile_enter" />

        <View
            android:id="@+id/view_divider_1"
            android:layout_width="@dimen/sw_317dp"
            android:layout_height="@dimen/sw_3dp"
            android:layout_marginTop="@dimen/sw_23dp"
            android:background="@drawable/shape_dash_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_avator" />

        <TextView
            android:id="@+id/tv_sensei_code"
            android:layout_width="0dp"
            android:layout_height="@dimen/sw_57dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Sensei Code"
            android:textColor="#4A4A4A"
            android:gravity="center_vertical"
            android:textSize="@dimen/sw_15dp"
            android:paddingStart="@dimen/sw_52dp"
            app:layout_constraintTop_toBottomOf="@id/view_divider_1" />

        <ImageView
            android:layout_width="@dimen/sw_19dp"
            android:layout_height="@dimen/sw_19dp"
            app:layout_constraintTop_toTopOf="@id/tv_sensei_code"
            app:layout_constraintBottom_toBottomOf="@id/tv_sensei_code"
            app:layout_constraintStart_toStartOf="@id/tv_sensei_code"
            android:layout_marginStart="@dimen/sw_17dp"
            android:src="@drawable/icon_profile_senseicode" />

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="0dp"
            android:layout_height="@dimen/sw_57dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Account"
            android:textColor="#4A4A4A"
            android:gravity="center_vertical"
            android:textSize="@dimen/sw_15dp"
            android:paddingStart="@dimen/sw_52dp"
            app:layout_constraintTop_toBottomOf="@id/tv_sensei_code" />

        <ImageView
            android:layout_width="@dimen/sw_19dp"
            android:layout_height="@dimen/sw_19dp"
            app:layout_constraintTop_toTopOf="@id/tv_account"
            app:layout_constraintBottom_toBottomOf="@id/tv_account"
            app:layout_constraintStart_toStartOf="@id/tv_account"
            android:layout_marginStart="@dimen/sw_17dp"
            android:src="@drawable/icon_profile_account" />

        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="0dp"
            android:layout_height="@dimen/sw_57dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Setting"
            android:textColor="#4A4A4A"
            android:gravity="center_vertical"
            android:textSize="@dimen/sw_15dp"
            android:paddingStart="@dimen/sw_52dp"
            app:layout_constraintTop_toBottomOf="@id/tv_account" />

        <ImageView
            android:layout_width="@dimen/sw_19dp"
            android:layout_height="@dimen/sw_19dp"
            app:layout_constraintTop_toTopOf="@id/tv_setting"
            app:layout_constraintBottom_toBottomOf="@id/tv_setting"
            app:layout_constraintStart_toStartOf="@id/tv_setting"
            android:layout_marginStart="@dimen/sw_17dp"
            android:src="@drawable/icon_profile_setting" />

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="0dp"
            android:layout_height="@dimen/sw_57dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Logout"
            android:textColor="#4A4A4A"
            android:gravity="center_vertical"
            android:textSize="@dimen/sw_15dp"
            android:paddingStart="@dimen/sw_52dp"
            app:layout_constraintTop_toBottomOf="@id/tv_setting" />

        <ImageView
            android:layout_width="@dimen/sw_19dp"
            android:layout_height="@dimen/sw_19dp"
            app:layout_constraintTop_toTopOf="@id/tv_logout"
            app:layout_constraintBottom_toBottomOf="@id/tv_logout"
            app:layout_constraintStart_toStartOf="@id/tv_logout"
            android:layout_marginStart="@dimen/sw_17dp"
            android:src="@drawable/icon_profile_logout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>