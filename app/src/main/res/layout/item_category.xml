<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_catetory_select"
        android:layout_marginStart="@dimen/sw_3dp"
        android:layout_marginEnd="@dimen/sw_3dp"
        android:layout_marginTop="@dimen/sw_5dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/sw_40dp"
            android:layout_height="@dimen/sw_40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/sw_5dp"
            android:src="@drawable/icon_category_ai" />

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Influencer"
            android:layout_marginTop="@dimen/sw_5dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/sw_5dp"
            android:textSize="@dimen/sw_15dp"
            app:layout_constraintTop_toBottomOf="@id/image" />

        <ImageView
            android:id="@+id/iv_checked"
            android:layout_width="@dimen/sw_10dp"
            android:layout_height="@dimen/sw_10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/sw_3dp"
            android:layout_marginBottom="@dimen/sw_3dp"
            android:src="@drawable/icon_category_select"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>